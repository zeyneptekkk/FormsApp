@model Product
@{
    ViewData["Title"] = "Create";
    List<Category> clist = (List<Category>) ViewBag.Categories;
}

<h2>Yeni Ürün Ekle</h2>

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for ="CategoryId" class="form-select">
            <option value="">Kategori Seçiniz</option>
            @foreach (var item in clist)
            {

                 <option value="@item.CategoryId">@item.Name</option> 
               
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for ="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control" />
    </div>

    <div class="mb-3">
        <img src="~/img/@Model.Image" alt="" style="width: 100px" />
        <input type="hidden" asp-for="@Model.Image" />
    </div>

    
    <div class="mb-3">
        
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
        <span asp-validation-for="Name"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
